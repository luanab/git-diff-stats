{
    "manifest_version": 3,
    "name": "Git +1",
    "description": "Enrich GitHub/GitLab pull/merge requests lists with number of files changed, lines added, and lines deleted.",
    "version": "1.0",
    "permissions": ["storage", "tabs", "notifications"],
    "host_permissions": ["https://api.github.com/graphql", "https://gitlab.com/api/graphql"],
    "action": {
        "default_icon": "logo.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.github.com/*", "https://*.gitlab.com/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["https://*/*"],
            "resources": ["sources/*.js"]
        }
    ]
}
